{
    "manifest_version" : 2,
    "name" : "OdisseyChromeExtension",
    "description" : "Reproductor de musica youtube",
    "version" : "1.0",
    "browser_action" : {
        "default_popup" : "index.html",
        "default_title" : "odissey"
    },
    "content_scripts" : [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js" : ["/js/index.js"]
        }
    ],
    "background": {
        "scripts": ["/js/index.js"],
        "persistent": false
      },
    "content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://www.youtube.com/s/player/9f996d3e/www-widgetapi.vflset/www-widgetapi.js; object-src 'self'",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "http://*/*" , "https://*/*",
        "cookies"
    ]
}